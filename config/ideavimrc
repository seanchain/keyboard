let mapleader=" "
set timeoutlen 1000
set easymotion

" easy motion
nmap f <Plug>(easymotion-f)
nmap F <Plug>(easymotion-F)
nmap w <Plug>(easymotion-w)
nmap b <Plug>(easymotion-b)
nmap <Leader>n <Plug>(easymotion-j)
nmap <Leader>i <Plug>(easymotion-k)

set relativenumber number
nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l

map <Leader>y :tabn<CR>
map <Leader>p :tabp<CR>
map <Leader>e :edit<CR>
map <Leader>q :qa<CR>
map <C-q> :q<CR>

nmap <Leader>uc g~iw

imap zx <Esc>

nnoremap n j
nnoremap N J
nnoremap o l
